<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prescription_line_form" model="ir.ui.view">
        <field name="name">prescription.order.line.form</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <form string="Prescription Line" create="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,ended,cancelled" class="oe_inline"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Prescription Order Reference"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" readonly='1'/>
                            </div>
                        </h1>
                    </div>

                    <group>
                        <separator colspan="2" string="Patient Information"/>
                            <group>
                                <field name="patient_name"/>
                                <field name="gender"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="blood_pressure"/>
                                <field name="respiratory_rate"/>
                                <field name="heart_rate"/>
                                <field name="spo2"/>
                                <field name="temperature"/>
                                <field name="weight"/>
                                <field name="height"/>
                            </group>
                        <separator string="Prescription Information" colspan="1"/>
                            <group>
                                <field name="drug_id" readonly="1"/>
                                <field name="route" readonly="1"/>
                                <field name="indication" readonly="1"/>
                            </group>
                            <group>
                                <field name="prescription_id" readonly="1"/>
                                <field name="prescribed_by" readonly="1"/>
                                <field name="date_prescribed" readonly="1"/>
                            </group>
                        <separator colspan="2"/>
                            <group string="Dosage Instructions">
                                <field name="dose" readonly="1"/>
                                <field name="dose_unit" readonly="1"/>
                                <field name="frequency" readonly="1"/>
                                <field name="frequency_unit" readonly="1"/>
                                <field name="instructions" readonly="1"/>
                            </group>
                            <group string="Dispensing Information">
                                <field name="qty_to_dispense" readonly="1"/>
                                <field name="qty_unit" readonly="1"/>
                                <field name="dispensing_instructions" readonly="1"/>
                                <field name="total_dispensed" readonly="1"/>
                                <field name="remaining_qty" readonly="1"/>
                            </group>

                        <separator  colspan="2"/>
                            <group string="Treatment Duration">
                                <field name="duration" readonly="1"/>
                                <field name="duration_unit" readonly="1"/>
                            </group>
                            <group string="Prescription Status">
                                <field name="state" readonly="1"/>
                                <field name="date_start" readonly="1"/>
                                <field name="date_end" readonly="1"/>
                            </group>
                    </group>
                    <notebook>
                        <page string="Patient Conditions">
                            <field name="conditions_ids" widget="one2many_list" >
                                <list>
                                    <field name="condition_id"/>
                                    <field name="onset_date"/>
                                    <field name="clinical_status"/>
                                </list>
                            </field>
                        </page>
                        <page string="Patient Allergies">
                            <field name="allergies_ids" widget="one2many_list" >
                                <list>
                                    <field name="allergen_id"/>
                                    <field name="reaction_ids" widget="many2many_tags"/>
                                    <field name="severity"/>
                                    <field name="comments"/>
                                </list>
                            </field>
                        </page>
                        <page string="Dispensing History">
                            <field name="dispense_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="dispensed_qty"/>
                                    <field name="dispensed_by"/>
                                    <field name="dispensed_date"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View with Filters -->
    <record id="view_prescription_line_list" model="ir.ui.view">
        <field name="name">prescription.order.line.list</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <list string="Prescriptions" create="0">
                <field name="name"/>
                <field name="prescription_id" column_invisible="1"/>
                <field name="patient_name"/>
                <field name="drug_id"/>
                <field name="state" widget="badge" decoration-danger="state in ['cancelled','ended']" decoration-success="state == 'active'"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="qty_to_dispense"/>
            </list>
        </field>
    </record>

    <!-- Action with Default Filter -->
    <record id="action_prescription_line" model="ir.actions.act_window">
        <field name="name">Prescription Lines</field>
        <field name="res_model">prescription.order.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"search_default_non_draft": 1}</field>
    </record>

    <!-- Search View with Filters -->
    <record id="view_prescription_line_filter" model="ir.ui.view">
        <field name="name">prescription.order.line.filter</field>
        <field name="model">prescription.order.line</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Non-Draft" name="non_draft" domain="[('state', '!=', 'draft')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Ended" name="ended" domain="[('state', '=', 'ended')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
            </search>
        </field>
    </record>
</odoo>