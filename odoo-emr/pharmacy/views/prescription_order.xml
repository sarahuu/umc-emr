<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_prescription_order_form" model="ir.ui.view">
            <field name="name">prescription.order.form</field>
            <field name="model">prescription.order</field>
            <field name="arch" type="xml">
                <form string="Prescription">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Prescription Order Reference"/>
                            <h1>
                                <div class="d-flex">
                                    <field class="text-break" name="name" readonly='1'/>
                                </div>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" readonly="1"/>
                                <field name="patient_name" readonly="1"/>
                                <field name="ordered_by" readonly="1"/>
                            </group>
                        </group>                        
                        <notebook>
                            <page string="Prescriptions">
                                <header>
                                    <button name="action_add_prescription_line" 
                                            string="Add Prescription" 
                                            type="object" 
                                            class="btn-primary"
                                            />
                                </header>
                                <field name="line_ids">
                                    <list string="Prescription Lines" create="0">
                                        <field name="drug_id"/>
                                        <field name="dose"/>
                                        <field name="dose_unit"/>
                                        <field name="frequency"/>
                                        <field name="frequency_unit"/>
                                        <field name="duration"/>
                                        <field name="duration_unit"/>
                                        <button name="confirm_order" string="Confirm Order" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                                        <button name="view_prescription" string="View Record" type="object" class="oe_highlight"/>
                                    </list>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_prescription_order_list" model="ir.ui.view">
            <field name="name">prescription.order.list</field>
            <field name="model">prescription.order</field>
            <field name="arch" type="xml">
                <list string="Prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="ordered_by"/>
                </list>
            </field>
        </record>

        <record id="action_prescription_order" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">prescription.order</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_prescription_order_list"/>
        </record>

    </data>
</odoo>