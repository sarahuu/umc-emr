<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pharmacy_drug_list" model="ir.ui.view">
        <field name="name">pharmacy.drug.list</field>
        <field name="model">pharmacy.drug</field>
        <field name="arch" type="xml">
            <list string="Drug Catalog" default_order="name">
                <field name="name"/>
                <field name="generic_name"/>
                <field name="strength"/>
                <field name="form"/>
                <field name="route"/>
                <field name="unit"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pharmacy_drug_form" model="ir.ui.view">
        <field name="name">pharmacy.drug.form</field>
        <field name="model">pharmacy.drug</field>
        <field name="arch" type="xml">
            <form string="Drug">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="generic_name"/>
                        <field name="strength"/>
                    </group>
                    <group>
                        <field name="form"/>
                        <field name="route"/>
                        <field name="unit"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_pharmacy_drug" model="ir.actions.act_window">
        <field name="name">Drugs</field>
        <field name="res_model">pharmacy.drug</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No drugs found.
            </p>
        </field>
    </record>

</odoo>
