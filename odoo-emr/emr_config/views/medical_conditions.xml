<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medical_condition_list" model="ir.ui.view">
        <field name="name">medical.conditions.list</field>
        <field name="model">medical.conditions</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="emr_name"/>
                <field name="snomed_code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_medical_condition_form" model="ir.ui.view">
        <field name="name">medical.conditions.form</field>
        <field name="model">medical.conditions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="emr_name"/>
                        <field name="snomed_code"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medical_conditions" model="ir.actions.act_window">
        <field name="name">Medical Conditions</field>
        <field name="res_model">medical.conditions</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
