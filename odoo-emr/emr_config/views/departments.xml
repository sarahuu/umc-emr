<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_university_departments_list" model="ir.ui.view">
        <field name="name">university.departments.list</field>
        <field name="model">university.departments</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="faculty"/>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_university_departments" model="ir.actions.act_window">
        <field name="name">departments</field>
        <field name="res_model">university.departments</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage locations for EMR.
            </p>
        </field>
    </record>
</odoo>