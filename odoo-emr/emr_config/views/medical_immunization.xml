<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_medical_immunization_list" model="ir.ui.view">
        <field name="name">medical.immunization.list</field>
        <field name="model">medical.immunization</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="emr_name"/>
                <field name="snomed_code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_medical_immunization_form" model="ir.ui.view">
        <field name="name">medical.immunization.form</field>
        <field name="model">medical.immunization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="emr_name"/>
                        <field name="snomed_code"/>
                        <field name="vaccine_type"/>
                        <field name="notes"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medical_immunization" model="ir.actions.act_window">
        <field name="name">Medical Immunization</field>
        <field name="res_model">medical.immunization</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
