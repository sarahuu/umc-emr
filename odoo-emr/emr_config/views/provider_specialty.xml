<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_provider_specialty_list" model="ir.ui.view">
        <field name="name">provider.specialty.list</field>
        <field name="model">provider.specialty</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
 
            </list>
        </field>
    </record>
    <record id="view_provider_specialty_form" model="ir.ui.view">
        <field name="name">provider.specialty.form</field>
        <field name="model">provider.specialty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_provider_specialty" model="ir.actions.act_window">
        <field name="name">Provider Specialties</field>
        <field name="res_model">provider.specialty</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage provider specialties for EMR.
            </p>
        </field>
    </record>
</odoo>