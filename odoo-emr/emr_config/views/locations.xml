<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_emr_locations_list" model="ir.ui.view">
        <field name="name">emr.locations.list</field>
        <field name="model">emr.locations</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="code" readonly="1"/>
                <field name="name"/>
                <field name="location_type"/>
            </list>
        </field>
    </record>

    <record id="action_emr_locations" model="ir.actions.act_window">
        <field name="name">Locations</field>
        <field name="res_model">emr.locations</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage locations for EMR.
            </p>
        </field>
    </record>

</odoo>