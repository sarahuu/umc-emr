<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_healthcare" model="ir.module.category">
        <field name="name">Healthcare</field>
        <field name="description">Modules related to medical and healthcare services</field>
        <field name="sequence">15</field>
    </record>
    <record id="group_emr_provider" model="res.groups">
        <field name="name">Provider</field>
        <field name="category_id" ref="module_category_healthcare"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_emr_admin" model="res.groups">
        <field name="name">EMR Administrator</field>
        <field name="category_id" ref="module_category_healthcare"/>
        <field name="implied_ids" eval="[(4, ref('emr_config.group_emr_provider'))]"/>
    </record>

    <record id="group_emr_patient" model="res.groups">
        <field name="name">Patient</field>
        <field name="category_id" ref="module_category_healthcare"/>
        <field name="implied_ids" eval="[(4, ref('base.group_public'))]"/>
    </record>
</odoo>