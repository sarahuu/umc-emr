<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_appointment_timeslot_list" model="ir.ui.view">
        <field name="name">appointment.time.slot.list</field>
        <field name="model">appointment.timeslot</field>
        <field name="arch" type="xml">
            <list>
                <field name="timeslot_id"/>
                <field name="provider_id"/>
                <field name="service_type"/>
                <field name="date"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="view_appointment_timeslot_form" model="ir.ui.view">
        <field name="name">appointment.time.slot.form</field>
        <field name="model">appointment.timeslot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,confirmed"/>
                    <button name="action_post" type="object" string="Post" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-success" invisible="state != 'posted'"/>
                    <button name="action_reset" type="object" string="Reset to Draft" invisible="state == 'draft'" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1 style="min-height: unset; margin-bottom: 0;">
                            <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break" name="timeslot_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="provider_id"/>
                            <field name="service_type"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="action_appointment_timeslot" model="ir.actions.act_window">
        <field name="name">Time Slots</field>
        <field name="res_model">appointment.timeslot</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent">
                Create and manage appointment time slots.
            </p>
        </field>
    </record>

</odoo>
