<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_result_form" model="ir.ui.view">
        <field name="name">lab.result.form</field>
        <field name="model">lab.result</field>
        <field name="arch" type="xml">
            <form string="Lab Result">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="order_line_id" readonly="1"/>
                        <field name="patient_id" readonly="1"/>
                        <field name="test_type_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Parameter Results">
                            <field name="parameter_result_ids">
                                <list editable="bottom" edit="state in ['accepted','requested']">
                                    <field name="test_type_id"/>
                                    <field name="parameter_id" domain="[('test_type_id','=',test_type_id)]"/>
                                    <field name="parameter_type"/>
                                    <field name="value_numeric" invisible="parameter_type != 'numeric'"/>
                                    <field name="value_text" invisible="parameter_type != 'text'"/>
                                    <field name="value_select" invisible="parameter_type != 'select'"/>
                                    <field name="unit"/>
                                    <field name="is_abnormal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_result" model="ir.actions.act_window">
        <field name="name">Lab Results</field>
        <field name="res_model">lab.result</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first lab result
            </p>
        </field>
    </record>
</odoo>
