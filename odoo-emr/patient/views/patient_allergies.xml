<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_allergies_form" model="ir.ui.view">
        <field name="name">patient.allergies.form</field>
        <field name="model">patient.allergies</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="allergen_id"/>
                        <field name="severity"/>
                        <field name="reaction_ids" widget="many2many_tags"/>
                        <field name="comments" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
